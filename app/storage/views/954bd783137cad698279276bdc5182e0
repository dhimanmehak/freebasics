// Dynamically Adding Twitter styles based on device width

// For Mobile - Portrait
viewportWidth = $(window).width();
if (viewportWidth > 0 && viewportWidth <479){
  var options = {
      "url": "<?php echo URL::asset('main/css/twitter-widget-custom-styles.css');; ?>"
  };
  CustomizeTwitterWidget(options);
}
// For Mobile - Landscape
else if (viewportWidth > 479 && viewportWidth < 767){
  var options = {
      "url": "<?php echo URL::asset('main/css/twitter-widget-custom-styles-mobile-landscape.css');; ?>"
  };
  CustomizeTwitterWidget(options);
}
// For Tablet
else if (viewportWidth > 767 && viewportWidth < 991){
  var options = {
      "url": "<?php echo URL::asset('main/css/twitter-widget-custom-styles-tablet.css');; ?>"
  };
  CustomizeTwitterWidget(options);
}
// For Desktop
else if(viewportWidth > 991){
  var options = {
      "url": "<?php echo URL::asset('main/css/twitter-widget-custom-styles-desktop.css');; ?>"
  };
  CustomizeTwitterWidget(options);
}


</script>
